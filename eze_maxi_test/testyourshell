echo ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
echo /bin/ls - should list directories and files in the current directory
/bin/ls
echo ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------- 
echo /usr/bin/pwd - should print the current directory
/usr/bin/pwd
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo /bin/d - should print /bin/d: not found
/bin/d
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo / - should print /: Permission denied
/
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo
echo ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
echo Task 3 - Command lines with arguments
echo ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
echo /bin/ls -l - should list directories and files in the current directory in long format
/bin/ls -l
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo /usr/bin/echo Hello World - should print Hello World
/usr/bin/echo Hello World
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo /bin/ls l - should print /bin/ls: cannot access 'l': No such a file or directory
/bin/ls l
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo /bin/ls -z - should print /bin/ls: invalid option: -- 'z' Try '/bin/ls --help' for more information.
/bin/ls -z
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo /bin/ls -l -a -n - should list directories and files in the current directory in long format even those started with . showing numeric user and group IDs.
/bin/ls -l -a -n
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo 
echo ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
echo Task 4 - Handle the PATH
echo ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
echo mkdir folder - should create a new directory called folder in the current directory
mkdir folder
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo ls - should list directories and files in the current directory
ls
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo rm -r folder - should remove the directory called folder from the current directory
rm -r folder
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo ls /tmp should list the files and directories in the /tmp directory
ls /tmp
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo p w d should print p: not found and do not execute the w command
p w d
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo whoami should diplay the user name of the current user 
whoami
echo ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
echo
